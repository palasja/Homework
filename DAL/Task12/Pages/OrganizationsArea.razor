@page "/OrganizationsArea"
@foreach (var org in AreaOrganization)
{
    <div class="row">
        <div class="col-2">
            @org.FullName
        </div>
        <div class="col-2">
            @org.Address
        </div>
        <div class="col-2">
            @org.Smdo
        </div>
        <div class="col-2">
            @org.Email
        </div>
    </div>
}

@code {
    [Parameter] public AreaToMenu Area { get; set; } = new AreaToMenu() { Id = 2, SimpleName = "Мозырь" };
    public int Id = 2;
    List<OrganizationDTO> AreaOrganization;
    protected override void OnInitialized()
    {
        AreaOrganization = OrganizationService.GetOrganizationOnArea(Area);
    }

}
